{
  "tasks": [
    {
      "label": "Recompile On GN",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        [
          "rm -rf out",
          "&&",
          "gn gen out",
          "&&",
          "ninja -C out",
        ]
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Compile Debug On GN",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        [
          "gn gen out",
          "&&",
          "ninja -C out",
        ]
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ],
  "version": "2.0.0"
}